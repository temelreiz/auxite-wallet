{
  "containerDefinitions": [
    {
      "name": "api",
      "image": "809278147371.dkr.ecr.eu-central-1.amazonaws.com/auxite2-api:api-goldapi-20251119-7",
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 3001,
          "protocol": "tcp",
          "name": "api-3001-tcp",
          "appProtocol": "http"
        }
      ],
      "essential": true,
      "command": [
        "node",
        "index.cjs"
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "3001"
        },
        {
          "name": "WS_PATH",
          "value": "/ws/prices"
        },
        {
          "name": "GOLDAPI_KEY",
          "value": "goldapi-58n6619mh0smwpz-io"
        },
        {
          "name": "GOLDAPI_URL",
          "value": "https://www.goldapi.io/api"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "CORS_ORIGIN",
          "value": "https://wallet.auxite.io,https://auxite.io,https://api.auxite.io"
        },
        {
          "name": "ADMIN_SECRET",
          "value": "auxite-shared-secret"
        },
        {
          "name": "PRICE_POLL_MS",
          "value": "5000"
        },
        {
          "name": "CACHE_TTL_MS",
          "value": "5000"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/auxite2/api",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "api"
        },
        "secretOptions": []
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:80/ || exit 1"
        ],
        "interval": 15,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      },
      "systemControls": []
    }
  ],
  "family": "auxite2-api",
  "taskRoleArn": "arn:aws:iam::809278147371:role/auxite2-task-role",
  "executionRoleArn": "arn:aws:iam::809278147371:role/auxite2-task-exec",
  "networkMode": "awsvpc",
  "volumes": [],
  "placementConstraints": [],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024"
}
